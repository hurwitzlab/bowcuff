BootStrap: debootstrap
OSVersion: trusty
MirrorURL: http://us.archive.ubuntu.com/ubuntu/

%environment
    PATH="/media/miniconda/bin:$PATH"

%runscript
    echo "By default this runs cuffdiff\n/
    Use exec [image-name] cuffnorm, etc. for other Tuxedo programs"
    exec cuffdiff "$@"

%post
    echo "Hello from inside the container"
    sed -i 's/$/ universe/' /etc/apt/sources.list
    #essential stuff
    apt update
    apt -y --force-yes install git sudo man vim build-essential wget unzip
    
    cd /tmp

    wget https://repo.continuum.io/miniconda/Miniconda3-latest-Linux-x86_64.sh -O miniconda.sh
    bash miniconda.sh -b -p /media/miniconda
    PATH="/media/miniconda/bin:$PATH"
    conda install -y -c bioconda cufflinks
    conda install -y -c R

    #cleanup    
    conda clean -y --all
    rm -rf /tmp/*
    cd /media

    #so we dont get those stupid perl warnings
    locale-gen en_US.UTF-8
